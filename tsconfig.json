{
    "compilerOptions": {
      "experimentalDecorators": true,
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "lib": [
        "esnext",
        "esnext.asynciterable",
        "dom"
      ],
      "esModuleInterop": true,
      "allowJs": true,
      "sourceMap": true,
      "strict": true,
      "noEmit": true,
      "baseUrl": ".",
      "paths": {
        "~/*": [
          "./*"
        ],
        "@/*": [
          "./*"
        ]
      },
      "types": [
        "@nuxt/types",
        "@types/node",
        "@types/webpack-env"
      ]
    },
    "include": [
      "nuxt.config.js",
      "client/**/*.vue",
      "client/**/*.ts",
      "tests/**/*.ts",
      "index.d.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }